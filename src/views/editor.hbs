{{#extend "body"}}
<div layout="column" layout-align="start stretch" style="height: 100%">

    <md-toolbar class="editor-nav md-menu-toolbar">
        <div layout="row">
            <md-menu-bar>
                <md-menu class="editor-buttons">
                    <md-button>
                        File
                    </md-button>
                    <md-button>
                        Edit
                    </md-button>
                </md-menu>
            </md-menu-bar>
        </div>
    </md-toolbar>

    <div layout="row" layout-align="end" style="height: 100%">

        <md-toolbar class="md-primary md-hue-1" style="width:20px;background-color: rgb(30, 30, 31)">
            <div layout="column" class="rotate-horizontal">
                <md-menu id="projects">
                    <md-button>
                        <span>Projects</span>
                    </md-button>
                </md-menu>
                <md-menu id="tasks">
                    <md-button>
                        <span>Tasks</span>
                    </md-button>
                </md-menu>
            </div>
        </md-toolbar>



        <md-toolbar class="md-hue-2" id="file-man">

            <div layout="column" layout-align="start start">
                <md-menu-bar>
                    <md-menu>
                    </md-menu>
                </md-menu-bar>
                
            </div>

        </md-toolbar>

        <md-toolbar id="resize-file-man"></md-toolbar>

        <div id="editor" layout="column" layout-align="end none">
            <iframe id="editor-frame" src="/editor/iframe" flex></iframe>
            <md-toolbar id="resize-terminal"></md-toolbar>
            <div id="terminal" flex></div>
        </div>
    </div>

    <md-toolbar class="md-primary md-hue-1" id="bottom-toolbar">
        <div layout="row">
            <md-menu>
                <md-menu-bar class="util-icons">
                    <md-button>
                        <i class="material-icons">code</i>
                        {{#if project}}
                            <span class="project-title">{{project.title}}</span>
                        {{else}}
                            <span class="project-title">Untitled</span>
                        {{/if}}
                    </md-button>
                    <md-button>
                        <i class="material-icons">error</i>
                        <span id="errors">0</span>
                    </md-button>
                    <md-button>
                        <i class="material-icons">warning</i>
                        <span id="warnings">0</span>
                    </md-button>
                </md-menu-bar>
            </md-menu>
        </div>
    </md-toolbar>

</div>
{{/extend}}